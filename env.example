# Application Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ecommerce
MONGODB_MAX_POOL_SIZE=10
MONGODB_MIN_POOL_SIZE=1
MONGODB_SERVER_SELECTION_TIMEOUT=5000
MONGODB_SOCKET_TIMEOUT=45000
MONGODB_BUFFER_COMMANDS=true

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Swagger Configuration
SWAGGER_TITLE=E-commerce API
SWAGGER_DESCRIPTION=Clean e-commerce API built with NestJS and MongoDB
SWAGGER_VERSION=1.0

# SMTP Email Configuration
# Note: If port 465 doesn't work, try port 587 with SMTP_SECURE=false (uses STARTTLS)
SMTP_HOST=mail.spacemail.com
SMTP_PORT=465
SMTP_USER=orders@shestrends.com
SMTP_PASS=your-email-password-here
SMTP_FROM=orders@shestrends.com
SMTP_SECURE=true
# Alternative: Use port 587 with STARTTLS if 465 is blocked
# SMTP_PORT=587
# SMTP_SECURE=false

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://shestrends.com,https://www.shestrends.com
ALLOWED_ORIGIN_SUFFIXES=.vercel.app 